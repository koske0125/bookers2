
<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<%= f.label :title, 'Title' %>
<%= f.text_area :title %>
<%= f.label :body, 'Body' %>
<%= f.text_field :body %>

<%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back" , "/books" %>